<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GalleryActivity">

    <Button
        android:id="@+id/button5"
        android:layout_width="37dp"
        android:layout_height="255dp"
        android:onClick="goPreviousImage"
        android:text="@string/previous_image"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewGallery"
        app:layout_constraintEnd_toStartOf="@+id/imageViewGallery"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageViewGallery" />

    <Button
        android:id="@+id/button4"
        android:layout_width="37dp"
        android:layout_height="255dp"
        android:layout_marginStart="36dp"
        android:onClick="goNextImage"
        android:text="@string/next_image"
        app:layout_constraintBottom_toBottomOf="@+id/imageViewGallery"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/imageViewGallery"
        app:layout_constraintTop_toTopOf="@+id/imageViewGallery" />

    <ImageView
        android:id="@+id/imageViewGallery"
        android:layout_width="159dp"
        android:layout_height="229dp"
        android:layout_marginTop="104dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageName"
        app:layout_constraintStart_toStartOf="@+id/imageName"
        app:layout_constraintTop_toBottomOf="@+id/imageName"
        app:layout_constraintVertical_bias="0.0"
        tools:src="@drawable/bob" />

    <TextView
        android:id="@+id/imageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:text="Imagem"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imageViewGallery"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="@+id/imageViewGallery"
        app:layout_constraintTop_toBottomOf="@+id/imageViewGallery"
        app:layout_constraintVertical_bias="0.094" />

</androidx.constraintlayout.widget.ConstraintLayout>